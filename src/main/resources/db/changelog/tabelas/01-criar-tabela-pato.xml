<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="criar-tabela-pato" author="luciano">

        <createTable tableName="pato">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="nome" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="mae_id" type="BIGINT"/>
            
            <column name="status" type="VARCHAR(1)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence 
                sequenceName="pato_seq"
                startValue="1"
                incrementBy="1"/>

        <addForeignKeyConstraint
                baseTableName="pato"
                baseColumnNames="mae_id"
                referencedTableName="pato"
                referencedColumnNames="id"
                constraintName="fk_pato_mae"/>
    </changeSet>

</databaseChangeLog>